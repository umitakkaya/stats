# See editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.sh]
indent_style = tab

[*.{yaml,yml}]
trim_trailing_whitespace = false

[docker-compose{.build,.override}.{yaml,yml}]
indent_size = 2

[Dockerfile*]
indent_style = tab
